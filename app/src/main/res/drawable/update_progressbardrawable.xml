<?xml version="1.0" encoding="UTF-8"?>   
 <layer-list xmlns:android="http://schemas.android.com/apk/res/android">   
 <!--  设置背景色图像资源  -->   
 <!-- <item android:id="@android:id/background" android:drawable="@drawable/update_progressbar_back" /> --> 
    <item android:id="@android:id/background"> 
      <clip> 
      <shape>  
          <corners android:radius="@dimen/update_progressbar_corners" />  
          <gradient  
           android:startColor="#F0F0F0"  
           android:centerColor="#F0F0F0"  
           android:centerY="0.75"  
           android:endColor="#F0F0F0"  
           android:angle="270"  
           />  
      </shape>  
    </clip>  
       </item> 
       
 <item android:id="@android:id/secondaryProgress"> 
      <clip> 
      <shape>  
          <corners android:radius="@dimen/update_progressbar_corners" />  
          <gradient  
           android:startColor="#F0F0F0"  
           android:centerColor="#F0F0F0"  
           android:centerY="0.75"  
           android:endColor="#F0F0F0"  
           android:angle="270"  
           />  
      </shape>  
    </clip>  
       </item> 
       
 <!--  设置第一级进度条颜色图像资源  -->   
 <item android:id="@android:id/progress"> 
      <clip> 
      <shape>  
          <corners android:radius="@dimen/update_progressbar_corners" />  
          <gradient  
           android:startColor="@color/actionBar_bg"
           android:centerColor="@color/actionBar_bg"
           android:centerY="0.75"  
           android:endColor="@color/actionBar_bg"
           android:angle="270"  
           />  
      </shape>  
    </clip>  
       </item>
 </layer-list>  
