<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/main_eventTodo_listItem_cardVerMargin"
    android:layout_marginLeft="@dimen/main_eventTodo_listItem_cardHorMargin"
    android:layout_marginRight="@dimen/main_eventTodo_listItem_cardHorMargin"
    android:layout_marginTop="@dimen/main_eventTodo_listItem_cardVerMargin"
    app:cardCornerRadius="@dimen/main_eventTodo_listItem_cardCornerRadius"
    app:contentPadding="@dimen/main_eventTodo_listItem_cardPadding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_txt_eventTodo_listItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/main_eventTodo_listItem_title_text"
            tools:text="放寒假啦放寒假啦放寒假啦放寒假啦放寒假啦放寒假啦放寒假啦"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_eventTodo_listItem_dashedLine_height"
            android:layerType="software"
            android:src="@drawable/dashed_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_txt_eventTodo_listItem_timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/main_eventTodo_listItem_timeStamp_text"
                tools:text="11-09 17:43"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textview_rounded_bg"
                android:text="@string/main_eventTodoCheckNow"
                android:textColor="@color/white"
                android:textSize="@dimen/main_eventTodo_listItem_checkNow_textSize"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>