<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chatFooter_popupBar_height"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_chat_preview_voice_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text="@string/chat_pin_record_voice" />

    <LinearLayout
        android:id="@+id/ll_chat_preview_voice_send_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_chat_preview_cancel_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/app_voice_preview_button_bg"
            android:clickable="true"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_chat_preview_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/app_voice_preview_button_bg"
            android:clickable="true"
            android:layout_weight="1"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center"
            android:text="发送" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_chat_preview_voice_play_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chat_preview_voice_tips"
        android:layout_above="@id/ll_chat_preview_voice_send_layout"
        android:layout_centerInParent="true"
        android:padding="2dp"
        android:src="@mipmap/chat_voice_preview_record" />
</RelativeLayout>
