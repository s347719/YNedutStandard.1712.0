<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/select_Image_item"
        android:layout_width="@dimen/chatFooter_popupBar_other_item_imgSize"
        android:layout_height="@dimen/chatFooter_popupBar_other_item_imgSize"
        android:layout_centerHorizontal="true">
    </ImageView>

    <TextView
        android:id="@+id/select_text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_Image_item"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/chatFooter_popupBar_other_item_textSize">
    </TextView>

</RelativeLayout>