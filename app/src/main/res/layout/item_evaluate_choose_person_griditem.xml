<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/app_evaluate_choose_person_rl"
        android:layout_width="@dimen/contactPersonInfo_avatarImg_size"
        android:layout_height="@dimen/contactPersonInfo_avatarImg_size"
        android:layout_centerHorizontal="true" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/app_evaluate_choose_person_iv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@mipmap/app_evaluate_user_head_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/app_evaluate_choose_eva_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/app_evaluate_choose_person_evaed"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="已评"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/app_evaluate_choose_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_evaluate_choose_person_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_listItem_icon_marginRight"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="姓名"
        android:textColor="#434343" />

</RelativeLayout>