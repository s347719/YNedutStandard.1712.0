<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.app.internship.ReportCalendarActivity"
    >

    <RelativeLayout
        android:background="@color/actionBar_bg_blue"
        android:padding="@dimen/common_actionbar_padding"
        tools:layout_height="46dp"
        tools:layout_width="match_parent"
        style="?attr/actionBarUniformStyle"
        >

        <ImageView
            android:id="@+id/reportCalendar_img_previous"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/app_evaluate_choose_back"
            />

        <TextView
            android:id="@+id/reportCalendar_txt_title"
            android:layout_centerInParent="true"
            tools:layout_height="wrap_content"
            tools:layout_width="wrap_content"
            tools:text="日报/周报/月报"
            style="?attr/actionBar_title"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/reportCalendar_txt_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_background_color"
        android:gravity="center"
        android:padding="@dimen/reportCalendar_subtitle_padding"
        android:textSize="@dimen/reportCalendar_subtitle_textSize"
        tools:text="2015级计算机应用及开发实习活动"
        />
    <FrameLayout
        android:id="@+id/reportCalendar_frm_calendarContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
