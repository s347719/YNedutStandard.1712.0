<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_chat_voice_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yineng.ynmessager.view.face.ChatTalkFragment">

    <TextView
        android:id="@+id/tv_chat_voice_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/chat_pin_record_voice" />

    <RelativeLayout
        android:id="@+id/rl_chat_voice_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_chat_voice_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/chat_voice_preview"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_chat_voice_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/chat_voice_delete"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_chat_voice_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/chat_voice_talk_record"
            android:longClickable="true"/>
    </RelativeLayout>



</LinearLayout>
