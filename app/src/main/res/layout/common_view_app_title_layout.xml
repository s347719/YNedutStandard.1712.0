<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_common_titleview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_actionbar_height"
    android:background="@color/app_actionBar_bg"
    >

    <LinearLayout
        android:id="@+id/app_common_titleview_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/common_actionbar_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/app_common_title_view_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/common_actionbar_btn_padding"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@mipmap/app_actionbar_close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_common_titleview_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="@dimen/common_actionbar_padding"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/app_common_title_view_infomation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/common_actionbar_btn_padding"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@mipmap/app_evaluate_submit_result" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/app_common_titleview_right"
        android:layout_toRightOf="@id/app_common_titleview_left" >

        <TextView
            android:id="@+id/app_common_title_view_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="依能"
            android:textColor="@color/white"
            android:textSize="@dimen/common_actionbar_title_textSize" />
    </RelativeLayout>

</RelativeLayout>