<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_actionbar_height"
        android:background="@color/actionBar_bg"
        android:padding="@dimen/common_actionbar_padding" >

        <TextView
            android:id="@+id/disGroupRename_txt_previous"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/previous"
            android:drawablePadding="@dimen/common_actionbar_backKey_drawableLeftPadding"
            android:gravity="center_vertical"
            android:text="@string/disGroupRename_previous"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:textColor="@color/white"
            android:textSize="@dimen/common_contact_actionbar_backKey_textSize" />

        <TextView
            android:id="@+id/chat_common_title_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/disGroupRename_title"
            android:textColor="@color/white"
            android:textSize="@dimen/common_actionbar_title_textSize" />

        <TextView
            android:id="@+id/disGroupRename_txt_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="@string/disGroupRename_done"
            android:textColor="@color/white"
            android:textSize="@dimen/common_actionbar_backKey_textSize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/disGroupRename_editTextArea_height"
        android:layout_marginBottom="@dimen/disGroupRename_editTextArea_verMargin"
        android:layout_marginTop="@dimen/disGroupRename_editTextArea_verMargin"
        android:background="@color/white"
        android:padding="@dimen/disGroupRename_editTextArea_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/disGroupRename_edt_newName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:maxLength="40"
                android:singleLine="true"
                android:textSize="@dimen/common_textSize_normal" />

            <ImageButton
                android:id="@+id/disGroupRename_imgb_clearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@mipmap/clear" />
        </LinearLayout>

        <TextView
            android:id="@+id/disGroupRename_txt_textCountLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:maxLength="40"
            android:text="@string/disGroupRename_textCountLimit"
            android:textSize="@dimen/common_textSize_xsmall" />
    </RelativeLayout>

</LinearLayout>