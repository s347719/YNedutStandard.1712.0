<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/imgFolder_listItem_padding" >

    <ImageView
        android:id="@+id/imgFolder_img_listItem_cover"
        android:layout_width="@dimen/imgFolder_listItem_coverImg_size"
        android:layout_height="@dimen/imgFolder_listItem_coverImg_size"
        android:layout_marginRight="@dimen/imgFolder_listItem_horSpacing" />

    <TextView
        android:id="@+id/imgFolder_img_listItem_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/imgFolder_img_listItem_arrowright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/imgFolder_listItem_horSpacing"
        android:src="@mipmap/contact_right_arrow" />

</LinearLayout>